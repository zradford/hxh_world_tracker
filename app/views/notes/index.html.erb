<div class="new-button">
  <%= link_to "New note", new_note_path, class: "button is-primary" %>
</div>
<div id="notes" class="container mt-2">
  <div class="columns">
    <div class="column">
      <h1 class="title is-5">All Notes</h1>
      <% @all_notes.each do |note| %>
        <div class="card block">
          <%= render note %>
        </div>
      <% end %>
    </div>
  
    <div class="column">
      <h1 class="title is-5">My Notes</h1>
      <% @my_notes.each do |note| %>
        <div class="card block">
          <%= render note %>
        </div>
      <% end %>
    </div>
  </div>
</div>
